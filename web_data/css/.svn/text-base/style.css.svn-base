html, body	
{ 
	height:100%; 
}

body 
{ 
	margin:0; padding:0; overflow:auto; text-align:center; 
    
	background-color: #FFFFFF;
	background-image: url('../images/repeatableBG.jpg');
	background-repeat: repeat-x;
	background-position: center top; 
	
	font-family: 'Maven Pro', sans-serif;
	font-size: 13px;
}   

a:link 
{
	color:#187ae7;
	text-decoration:none;
}      /* unvisited link */

a:visited 
{
	color:#187ae7;
	text-decoration:none;
}  /* visited link */

a:hover 
{
	color:#187ae7;
	text-decoration:underline;
}  /* mouse over link */
	   
#flashContent 
{ 
	display: none; 
}
			
#mainContainer
{
	height: 100%;
	width: 960px;
	
	padding: 0px;
	
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 0px;
}
			
#gameContainer
{
	padding-top: 85px;
}
			
#gameFrame
{
	background-image: url('../images/gameFrameBG.png');
	background-repeat: no-repeat;
	width: 776px;
	height: 460px;
	padding-top: 24px;
	margin-left: auto;
	margin-right: auto;
}

#pageInfoContainer
{
	/*background-color: #00AA00;*/
	color: #000000;
	float: left;
	padding-bottom: 30px;
}

#leftContent
{
	width: 180px;
	padding-left: 10px;
	padding-right: 10px;
	align: center;
	display: block;
	float: left;
}

#centerContent
{
	float: left;
	width: 560px;
}

div.centerItem
{
	clear: both;
	margin-bottom: 40px;
}

div.itemHeader
{
	background-color: #FFFFFF;
	
	text-align: center;
	font-family: 'Ubuntu Condensed', sans-serif;
	
	padding-top: 10px;
	padding-bottom: 10px;

	border-bottom-style: solid;
	border-bottom-color: #CCCCCC;
	border-bottom-width: 1px;
	border-top-style: solid;
	border-top-color: #CCCCCC;
	border-top-width: 1px;
	
	color: #000000;
	font-size: 16px;
	font-weight: bold;
}

div.itemContent
{
	text-align: left;
	padding-left: 5px;
	padding-right: 5px;
	padding-top: 10px;
}

div.itemContent ul
{

}

td.controlsTableData
{
	width: 100px;
	text-align: right;
}

td.controlsDesc
{
	padding-left: 25px;
}

#rightContent
{
	width: 180px;
	padding-left: 10px;
	padding-right: 10px;
	align: center;
	display: block;
	float: left;
/*	background-color: #00AA00;*/
}

#footerContainer
{
	clear: both;
	height: 85px;
	
	padding-top: 35px;
	
	background-image: url('../images/footerBG.png');
	background-repeat: repeat-x;
	background-position: center top; 
	margin-bottom: 0;
}

.grayTextStyle
{
	color: #888888;
}

.whiteTextStyle
{
	color: #FFFFFF;
}